{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "paths": {
      "@app/contracts/*": ["src/contracts/*"],
      "@app/types": ["src/types"],
      "@client": [".client"],
      "@test/utils/*": ["test/utils/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2016"
  }
}
